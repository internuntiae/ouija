{
  "name": "ouija",
  "version": "1.0.0",
  "private": "true",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace=apps/web run dev",
    "dev:api": "npm --workspace=apps/api run dev",
    "build:web": "npm --workspace=apps/web build dev",
    "build:api": "npm --workspace=apps/api build dev",
    "format": "prettier --write \"apps/**/*.{ts,tsx,json,scss}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,json,scss}\"",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,scss}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zjezdzalka/ouija.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zjezdzalka/ouija/issues"
  },
  "homepage": "https://github.com/zjezdzalka/ouija#readme",
  "dependencies": {
    "express": "^5.2.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@next/eslint-plugin-next": "^16.1.3",
    "@types/express": "^4.17.25",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.53.0"
  }
}
