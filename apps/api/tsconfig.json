{
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,

    "baseUrl": "src",
    "paths": {
      "@generated/*": ["generated/*"],
      "@lib/*": ["lib/*"],
      "@/*": ["*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routers/*": ["routers/*"],
      "@services/*": ["services/*"]
    },
    "importHelpers": false,
    "experimentalDecorators": true,
    "pretty": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
